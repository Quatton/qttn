---
import '@fontsource/merriweather';
import '@fontsource/dm-sans';

import '@/styles/globals.css'
import { site } from '@/config/site';

interface Props {
	title?: string;
}

const { title = site.title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class="fixed w-full h-16 px-6 py-4 border-b shadow">
			<a href="/">
				<h1 class="transition-all hover:-translate-y-1 text-2xl font-semibold font-serif text-primary-surface-foreground">{title}</h1>
			</a>
		</header>

		<slot />
	</body>
	</html>	